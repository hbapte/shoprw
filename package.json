{
  "name": "server",
  "version": "1.0.0",
  "description": "To Do App backend services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "seed": "ts-node src/database/seeds/productSeed.ts", 
    "start": "ts-node src/app.ts",
    "dev": "nodemon src/app.ts",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test | coveralls",
    "test": "ts-mocha 'src/modules/**/*.spec.ts' --timeout 300000 --exit",
    "test:watch": "mocha --watch --require ts-node/register 'src/modules/**/*.spec.ts' --timeout 300000 --exit",
    "coverage": "nyc mocha --require ts-node/register 'src/modules/**/*.spec.ts' --timeout 300000 --exit"
  },
  "author": "Ishimwe Jean Baptiste",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.2",
    "@types/nodemailer": "^6.4.14",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "http-status": "^1.7.4",
    "jose": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.0",
    "path": "^0.12.7",
    "resend": "^4.0.0",
    "sinon": "^17.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsc-node": "^0.0.3",
    "typescript": "^5.4.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.14",
    "@types/cors": "^2.8.17",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^10.0.6",
    "@types/multer": "^1.4.11",
    "@types/passport-jwt": "^4.0.1",
    "@types/sinon": "^17.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^4.3.4",
    "chai-http": "^4.4.0",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.spec.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/database/**/*.*",
      "src/modules/**/spec/*.ts",
      "src/middlewares/authMiddleware.ts",
      "src/middlewares/authenticatedUser.ts",
      "src/modules/user/controllers/verifyEmailController.ts",
      "src/documentation/swaggerAPIdocs.ts",
      "src/modules/blog/controllers/blogController.ts",
      "src/modules/comment/controller/commentController.ts",
      "src/modules/**/repository/*.ts",
      "src/modules/user/controllers/loginController.ts",
      "src/modules/user/repository/loginRepository.ts",
      "src/modules/user/utils",
      "src/modules/blog/helpers",
      "src/config/"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "lines": 40
  }
}
